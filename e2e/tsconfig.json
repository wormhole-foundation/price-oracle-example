{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "lib": ["ES2022"],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "resolveJsonModule": true,
        "outDir": "./dist",
        "rootDir": "../",
        "baseUrl": "../",
        "forceConsistentCasingInFileNames": true
    },
    "include": ["./**/*.ts", "../config/**/*.ts", "../ts-lib/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
