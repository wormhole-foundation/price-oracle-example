{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "lib": ["ES2022", "DOM"],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "resolveJsonModule": true,
        "outDir": "./dist",
        "rootDir": "./",
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true
    },
    "include": ["e2e/**/*.ts", "config/**/*.ts", "ts-lib/**/*.ts"],
    "exclude": ["node_modules", "dist", "lib", "out", "cache"]
}
